<%- model_class = Image -%>
<div class="page-header">
  <h1 style="text-align: center;"><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="col col-md-12", style="padding-bottom: 25px;">
  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
    <dd style="padding-bottom: 20px;"><%= @image.name %></dd>
    <dt></dt>
    <dt style="width: 1024px; "><%= image_tag(@image.picture.url) if @image.picture? %></dt>
  </dl>
</div>
<%= link_to t('.back', :default => t("helpers.links.back")),
              images_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_image_path(@image), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              image_path(@image),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
